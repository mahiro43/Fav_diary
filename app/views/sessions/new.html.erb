<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-body">
          <h2 class="text-center mb-4">ログイン</h2>

          <%= form_for :session, url: sessions_path, html: { class: 'form-horizontal', data: { turbo: false } } do |f| %>
            <div class="form-group mb-4"> <!-- メール入力欄にマージンを追加 -->
              <%= f.label :email, "メールアドレス", class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>

            <div class="form-group mb-4"> <!-- パスワード入力欄にマージンを追加 -->
              <%= f.label :password, "パスワード", class: 'form-label' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>

            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %>
              <span>次回から自動的にログイン</span>
            <% end %>
                        
            <div class="form-group text-center"> <!-- ボタンを中央揃えにする -->
              <%= f.submit "ログイン", class: 'btn btn-primary' %>
            </div>
          <% end %>
          <div class="text-center">
            登録がまだの方<%= link_to "登録ページへ", signup_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
