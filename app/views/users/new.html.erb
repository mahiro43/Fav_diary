<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-body">
          <!-- ユーザー登録の見出しを追加 -->
          <h2 class="text-center mb-4">ユーザー登録</h2>

          <%= form_for @user, url: users_path, html: { class: 'form-horizontal', data: { turbo: false } } do |f| %>
            <div class="form-group mb-4">
              <%= f.label :name, "ユーザーネーム", class: 'form-label' %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>

            <div class="form-group mb-4">
              <%= f.label :email, "メール", class: 'form-label' %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>

            <div class="form-group mb-4">
              <%= f.label :password, "パスワード", class: 'form-label' %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>

            <div class="form-group mb-4">
              <%= f.label :password_confirmation, "パスワード確認", class: 'form-label' %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>

            <div class="form-group text-center">
              <%= f.submit "登録", class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
