<div class="container">
  <div class="form-header">
    <h1><%= @fav.name %>のプロフィールを編集</h1>
  </div>
  <div class="form-body">
    <%= form_for @fav, html: { multipart: true }, data: { turbo: false } do |f| %>
      <div class="form-group">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :nickname, "ニックネーム" %>
        <%= f.text_field :nickname, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :birthday, "生年月日" %>
        <%= f.date_select :birthday, start_year: 1970, end_year: Date.today.year, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :color, "推しカラー" %>
        <%= f.text_field :color, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :comments, "フリースペース" %>
        <%= f.text_area :comments, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :image, "アイコン" %>
        <%= f.file_field :image, class: 'form-control', id: 'fav_image' %>
        <%# 既存の画像を表示する %>

        <% if @fav.image.present? %>
          <%= image_tag @fav.image.url, id: 'image-preview', class: 'img-preview' %>
        <% else %>
          <%= image_tag 'fav1.png', id: 'image-preview', class: 'img-preview' %>
        <% end %>
      </div>
      
      <div class="form-group center">
        <%= f.submit '更新', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
